# ===================
# Build & Registry Settings
# ===================
# Version of the application
APP_VERSION=1.0.0
# Environment (development, staging, production)
APP_ENV=development
# Image tag
TAG=latest
# Docker registry location
DOCKER_REGISTRY=local
# Automatically generated build date (can be overridden for reproducible builds)
# BUILD_DATE=2025-04-06T12:00:00Z

# ===================
# Common Settings
# ===================
# Timezone for containers
TZ=America/New_York
# How long to wait before giving up on healthchecks (seconds)
HEALTHCHECK_TIMEOUT=5
# Default retry count for healthchecks
HEALTHCHECK_RETRIES=3

# ===================
# Nginx Settings
# ===================
# Service name for the Nginx container
SERVICE_NAME=honeybun
# Internal port Nginx listens on
SERVICE_PORT=80
# External HTTP port mapping
NGINX_HTTP_PORT=80
# External HTTPS port mapping
NGINX_HTTPS_PORT=443
# Enable healthchecks for Nginx container
ENABLE_HEALTHCHECK=true
# Enable GZIP compression for better performance
ENABLE_GZIP=false
# Auto-redirect HTTP requests to HTTPS
ENABLE_HTTPS_REDIRECT=false
# Path to Nginx configuration files
CONFIG_PATH=./config/nginx
# Path to HTML content
HTML_PATH=./config/html
# Path to SSL certificates (for HTTPS)
SSL_CERT_PATH=./ssl
# Interval between healthchecks in seconds
NGINX_HEALTHCHECK_INTERVAL=15
# Grace period before starting healthchecks (seconds)
NGINX_HEALTHCHECK_START_PERIOD=10

# ===================
# Resource Limits
# ===================
# CPU limit for Nginx container
NGINX_CPU_LIMIT=0.5
# Memory limit for Nginx container (MB)
NGINX_MEMORY_LIMIT=256M